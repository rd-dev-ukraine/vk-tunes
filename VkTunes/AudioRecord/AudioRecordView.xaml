<UserControl x:Class="VkTunes.AudioRecord.AudioRecordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VkTunes.AudioList"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Style="{StaticResource TextDefault}">
    <StackPanel Orientation="Vertical">
        <DockPanel>
            <TextBlock Text="{Binding Duration}" DockPanel.Dock="Right"></TextBlock>
            <TextBlock Text="{Binding Title}"></TextBlock>
        </DockPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock>Audio ID:</TextBlock>
            <TextBlock Text="{Binding Id}"></TextBlock>
            <TextBlock>|</TextBlock>
            <TextBlock>Size:</TextBlock>
            <TextBlock Text="{Binding FileSize, Converter={local:BytesToSizeConverter}}" ></TextBlock>
            <Button x:Name="Download">Download</Button>
        </StackPanel>
        <TextBlock Text="{Binding LocalFilePath}"></TextBlock>
    </StackPanel>
</UserControl>
